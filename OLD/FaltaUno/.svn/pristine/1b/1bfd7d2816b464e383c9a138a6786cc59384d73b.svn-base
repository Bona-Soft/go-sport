/**********************************
SLICK
**********************************/

.slick-request-player {
   margin: 10px;
}

.slick-player-img {
	max-width: 75px;
   width: 75px;
   max-height: 75px;
   margin: auto;
}

.slick-player-label {
	max-width: 75px;
	margin: auto;
}

.slick-player{
	align-content: center;
	text-align: center;
   cursor: pointer;
}

.slick-player.disabled{
   opacity: 0.4;
}

.block-with-text {
	overflow: hidden;
	line-height: 1.2em;
	max-height: 1.2em;
	white-space: pre-line; /* CSS3 */
	white-space: -moz-pre-line; /* Firefox */
	white-space: -pre-line; /* Opera <7 */
	white-space: -o-pre-line; /* Opera 7 */
	word-wrap: normal; /* IE */
	text-overflow: ellipsis;
}

.two-lines {
	max-height: 2.4em;
}

.tree-lines {
	max-height: 3.6em;
}

/* hide ... if we have text, which is less than or equal to max lines */
.block-with-text:after {
	/* points in the end */
	content: '';
	/* absolute position */
	position: absolute;
	/* set position to right bottom corner of text */
	right: 0;
	/* set width and height */
	width: 1em;
	height: 1em;
	margin-top: 0.2em;
	/* bg color = bg color under block */
	background: white;
}


